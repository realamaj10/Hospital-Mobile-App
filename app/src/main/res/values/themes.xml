<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="GeneralDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorDarkBlue</item>
        <item name="colorControlActivated">@color/colorDarkBlue</item>
    </style>

    <style name="TvNormalStyle">
        <item name="android:textColor">@color/nav_color_light_black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:fontFamily">@font/sf_compact_regular</item>
    </style>

    <style name="TvNormalHintStyle">
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/sf_compact_thin</item>
    </style>


    <style name="TvHeadingStyle">
        <item name="android:textColor">@color/nav_color_light_black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
    </style>

    <style name="TvTitleStyle">
        <item name="android:textColor">@color/nav_color_light_black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
    </style>

    <style name="TvExtraHeadingStyle">
        <item name="android:textColor">@color/nav_color_light_black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
    </style>


    <style name="buttonStyle">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:elevation">@dimen/_1sdp</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="background">@drawable/button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>

    </style>

    <style name="buttonStyleJobs">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:elevation">@dimen/_1sdp</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
    </style>


    <style name="editTextStyle">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_13sdp</item>
        <item name="android:paddingTop">@dimen/_13sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
        <item name="android:textColorHint">#C6C6C6</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/_1sdp</item>
        <item name="android:textColor">@color/nav_color_light_black</item>
        <item name="android:background">@null</item>

    </style>


    <style name="layoutETStyle">
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
        <item name="android:textColorHint">#C6C6C6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/_1sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/edittext_layout_background</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>
        <item name="colorSwitchThumbNormal">@color/colorDarkBlue</item>
        <item name="android:colorForeground">@color/colorDarkBlue</item>
    </style>

    <style name="inputCardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_42sdp</item>
        <item name="android:layout_marginStart">@dimen/_2sdp</item>
        <item name="android:layout_marginEnd">@dimen/_2sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="cardElevation">@dimen/_2sdp</item>
    </style>


    <style name="inputCardViewLayoutStyle">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorAppLightGrey</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_4sdp</item>
    </style>
</resources>
